TILambda := class extend TGCObject
{
	Capture := virtual !() -> TILambda^
	{
		//assert(false)
		return null
	}
	IsFinished := virtual !() -> bool
	{
		return false
	}

	getCaptureVar := virtual !() -> void^ { return null }
}

TLambda := class .{@FuncPtr} extend TILambda
{
	callFunc := FuncPtr
	//"()" := !(args...)
	//{
	//	return this.callFunc(this&,argc...)
	//}
}
TLambdaWithCaptures := class .{@FuncPtr,@CapTypePtr} extend TLambda.{FuncPtr}
{
	capPtr := CapTypePtr

	getCaptureVar := virtual !() -> void^ { 
		result = capPtr
	}
}

internalHVLambdaCall := !(@T lmb,args...) -> void // return type replaced by compiler on result type of @FuncType
{
	lmb.callFunc(lmb&,args...)
}
internalHVLambdaGetCaptures := !(void^ lmbd) .{@T} -> T^
{
	c0 := lmbd->{TILambda^}
	c1 := c0.getCaptureVar()
	return c1->{T^}
}

internalHVCreateLambda := !(@FuncPtr fnc,@CaptureTuplePtr CaptureVars) -> TLambda.{FuncPtr}^
{
	res := new TLambdaWithCaptures.{FuncPtr,CaptureTuplePtr}
	res.callFunc = fnc
	res.capPtr = CaptureVars
	result = res
}

