someCls := class
{
	x := int
	hoh := @once !() -> void
	{
		printf("HOHO %p\n",this&)
	}
}

"@once func" := !(args...) .{@T} -> void
{
	printf("called once\n")
}

main := !(char^[] args) -> int
{
	cls := someCls
	cls.hoh()
	return 0
}

