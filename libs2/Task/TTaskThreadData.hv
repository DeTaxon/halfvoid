TTaskThreadData := class extend TGCObject
{
	AllTasks := AVLSet.{TTask^}
	PendingTasks := List.{TTask^}
	DeleteTasks := List.{TTask^}

	ThreadMainTask := TTask^

	this := !() -> void
	{
		internalHVInitClass(AllTasks)
	}

	Destroy := virtual !() -> void
	{
		AllTasks.Destroy()
		ThreadMainTask = null
	}
}
