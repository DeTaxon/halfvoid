HVFixedArrayIterator := class .{@T}
{
	pointer := T^
	size := int
	ind := int
	"()" := !() -> T&
	{
		result = pointer[ind]&
		ind += 1
	}
	HaveValue := !() -> bool
	{
		result = ind < size
	}
}

"->{}" := !(TVector.{@T} ve) .{T^} -> T^
{
	return ve.Get()
}
