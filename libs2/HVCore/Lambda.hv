					setField = getField
				}
			}
		}

		for setField : newLambda.lambdaVars->AllFields , getField : this.lambdaVars->AllFields
		{
			if getField->TypeGroup == "Class"
			{
				//assert(false) //TODO , check for operator = not implemented
			}else{
