"->{}" := !(String st) .{char^} -> char^
{
	return st.Str()
}
"->{}" := !(StringSpan spn) .{char^} -> String^
{
	return spn.GetString()
}


StringConcat := !(args...) -> String^
{
	echo := TEchoStream

	for it : args
	{
		echo << it
	}
	return echo.GetString()
}
