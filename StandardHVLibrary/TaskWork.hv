TaskBoxWorkData := class
{
	lambda := !(int)&->void
	taskData := TaskData^
	exeTimes := int
	numToExe := int

	this := !(!(int)&->void l, TaskData^ t,int exTm) -> void
	{
		numToExe = 0
		lambda = l
		taskData = t
		exeTimes = exTm
	}
	"=" := default
}

AppendClass TaskBox
{
	itWorkMutex := Mutex
	itWorkConVar := ConVar
	itWorkToDo := List.{TaskBoxWorkData} ; $keep
	itWorkCount := int
	poolThread := List.{Thread^}

	ExpectWorkers := !(int expects) -> void
	{
		diffWorks := expects - poolThread.Size()
		if diffWorks <= 0
			return void
			
		for i : diffWorks
		{
			newThread := new Thread(() ==> {
				while working
				{
					itWorkMutex.Lock()

					if itWorkToDo.Size() != 0
					{
						workRef := ref itWorkToDo.Front()
						workRef.exeTimes -= 1
						work := itWorkToDo.Front() 
						workRef.numToExe += 1
						
						if work.exeTimes == 0
						{
							itWorkToDo.Pop()
						}

						itWorkMutex.Unlock()
						work.lambda(work.numToExe)
						FlushTempMemory()

						if work.exeTimes == 0
						{
							itMutex.Lock()
							tasksToExe << work.taskData
							notifyMain()
							itMutex.Unlock()
						}
					}else{
						if not working
						{
							itWorkMutex.Unlock()
							return void
						}
						itWorkConVar.Wait(itWorkMutex&)
						itWorkMutex.Unlock()
					}
				}
			})
			itMutex.Lock()
			poolThread << newThread
			itMutex.Unlock()
		}
	}
	AwaitWork := !(!()&->void lambd) -> void
	{
		AwaitManyWorks(1,(n) ==> { lambd() })
	}
	AwaitManyWorks := !(int num,!(int)&->void lambd) -> void
	{
		ExpectWorkers(1)
		itWorkMutex.Lock()
		itWorkCount += 1
		itWorkToDo.Emplace(lambd,CurrentTask,num)
		itWorkConVar.NotifyAll()
		itWorkMutex.Unlock()
		switchToMain()
	}
	checkExeWorks := !() -> TaskData^
	{
		if tasksToExe.Size() == 0
			return null

		return tasksToExe.Pop()
	}
}
