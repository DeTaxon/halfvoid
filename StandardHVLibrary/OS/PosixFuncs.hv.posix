osIsFolder := !(char^ nm) -> bool
{
	st1 := char[144]
	if stat(nm,st1[0]&) != 0
		return false
	itflg := st1[24]&->{s32^}^
	if (itflg and_b S_IFDIR) == S_IFDIR
		return true
	return false
}

fsIsExist := !(char^ nm) -> bool
{
	return osFileId(nm) != 0
}

