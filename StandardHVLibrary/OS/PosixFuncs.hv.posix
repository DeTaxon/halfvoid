osReadFolder := !(char^ nm, !(StringView)& -> void cb) -> void
{

	dirFd := opendir(nm)
	if dirFd == null
		return void
	
	defer closedir(dirFd)

	while true
	{
		nowEntry := readdir(dirFd)
		if nowEntry == null
			return void
		view := StringSpan(nowEntry->{char^}[19]&)
		cb(view)
	}

}

fsGetAbsolutePath := !(StringView ptr) -> String^
{
	bsName := ptr.GetString()
	resPath := realpath(bsName.Str(),null)
	if resPath == null
		return null
	defer free(resPath)
	result = new String(resPath)
}

GetRealTimeU64Seconds := !() -> u64
{
	times := u64[2]
	clock_gettime(0,times[0]&)
	return times[0]
}
GetSteadyTime := !() -> double
{
	times := u64[2]
	clock_gettime(1,times[0]&)
	resTime := times[0]->{double}
	return resTime + times[1]*0.001*0.001*0.001
}

